<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="003-create-wallet-table" author="pedro.henrique">
        <preConditions onFail="CONTINUE">
            <not>
                <tableExists tableName="tb_wallet"/>
            </not>
        </preConditions>

        <createSequence sequenceName="wallet_id_seq" incrementBy="1" startValue="1"/>

        <createTable tableName="tb_wallet">
            <column name="id" type="BIGINT" defaultValueSequenceNext="wallet_id_seq">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="saldo" type="NUMERIC(19, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" unique="true"
                             foreignKeyName="fk_wallet_user"
                             references="tb_user(id)"/>
            </column>
        </createTable>

        <sql>
            INSERT INTO tb_wallet (id, saldo, user_id)
            SELECT nextval('wallet_id_seq'), 5500.00, id
            FROM tb_user;
        </sql>

    </changeSet>

</databaseChangeLog>