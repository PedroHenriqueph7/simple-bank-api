<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="006-create-bill-payment-table" author="pedro.henrique">
        <preConditions onFail="CONTINUE">
            <not>
                <tableExists tableName="tb_bill_payment"/>
            </not>
        </preConditions>

        <comment>Cria a sequÃªncia bill_payment_id_seq para a tabela tb_bill_payment</comment>

        <createSequence sequenceName="bill_payment_id_seq"
                        incrementBy="1"
                        startValue="1" />

        <createTable tableName="tb_bill_payment">

            <column name="id" type="BIGINT"
                    defaultValueSequenceNext="bill_payment_id_seq"> <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="identification_field" type="VARCHAR(49)">
                <constraints nullable="false"/>
            </column>

            <column name="value" type="NUMERIC(19,2)">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="VARCHAR(150)">
                <constraints nullable="false"/>
            </column>

            <column name="discount" type="NUMERIC(19,2)">
            </column>

            <column name="interest" type="NUMERIC(19,2)">
            </column>

            <column name="fine" type="NUMERIC(19,2)">
            </column>

            <column name="fee" type="NUMERIC(19,2)">
            </column>

            <column name="external_reference" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="original_due_date" type="DATE">
                <constraints nullable="false"/>
            </column>

            <column name="beneficiary" type="VARCHAR(100)">
            </column>

            <column name="receipt_url" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="payment_status" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMPTZ">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMPTZ">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>