<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="005-create-deposit-table" author="pedro.henrique">
        <preConditions onFail="CONTINUE">
            <not>
                <tableExists tableName="tb_deposit"/>
            </not>
        </preConditions>

        <comment>Cria a sequÃªncia transaction_id_seq para a tabela tb_transaction</comment>

        <createSequence sequenceName="deposit_id_seq"
                        incrementBy="1"
                        startValue="1" />

        <createTable tableName="tb_deposit">

        <column name="id" type="BIGINT"
                defaultValueSequenceNext="deposit_id_seq"> <constraints primaryKey="true" nullable="false"/>
        </column>

        <column name="user_id" type="BIGINT">
            <constraints nullable="false"/>
        </column>

        <column name="valor" type="NUMERIC(10,2)">
            <constraints nullable="false"/>
        </column>

        <column name="status_atual" type="VARCHAR(20)">
            <constraints nullable="false"/>
        </column>

        <column name="pix_id" type="VARCHAR(64)">
            <constraints nullable="false"/>
        </column>

        <column name="data_expiracao" type="DATE">
            <constraints nullable="false"/>
        </column>

        <column name="data_hora" type="TIMESTAMP">
        </column>
    </createTable>

    </changeSet>
</databaseChangeLog>